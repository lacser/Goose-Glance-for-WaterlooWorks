{
  "manifest_version": 3,
  "name": "Goose Glance",
  "version": "0.1",
  "description": "AI-powered job description analyzer for WaterlooWorks",
  "permissions": ["activeTab", "storage", "tabs"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.waterlooworks.uwaterloo.ca/*"],
      "js": ["utils/turndown.js", "content_scripts.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "utils/tableUtils.js",
        "content/index.html",
        "content/assets/*",
        "content/fonts/*",
        "content/icons/*",
        "content/techIcons/*",
        "content/countryFlags/*",
        "welcome/index.html",
        "welcome/assets/*"
      ],
      "matches": ["*://*.waterlooworks.uwaterloo.ca/*"]
    }
  ]
}
